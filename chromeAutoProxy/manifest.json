//Based on chrome extension "Proxy Auto Auth" https://chrome.google.com/webstore/detail/proxy-auto-auth/ggmdpepbjljkkkdaklfihhngmmgmpggp
{
  "manifest_version": 2,
  "name": "Proxy Auto Auth",
  //"description" : "This extension enable you to automatically authenticate to your proxy once you set up your credentials.",
  "version": "2.0",
  "background": {
    "scripts": ["bg.js"]
  },
  "permissions": [
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
